{
  "name": "@windingtree/org.id-resolver",
  "version": "3.1.3",
  "description": "ORGiD DID resolver",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "build": "rm -rf dist && npx tsc -p tsconfig-build.json && npx ts-node ./scripts/responseSchema.ts > ./dist/responseSchema.json",
    "test": "npx hardhat test",
    "test:coverage": "npx nyc --reporter=html --reporter=lcov hardhat test"
  },
  "keywords": [
    "windingtree",
    "orgid",
    "did",
    "resolver",
    "typescript"
  ],
  "author": "Kostiantyn Smyrnov <kostysh@gmail.com>",
  "homepage": "https://github.com/windingtree/org.id-resolver#README",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:windingtree/org.id-resolver.git"
  },
  "dependencies": {
    "@windingtree/org.id": "^3.0.1",
    "@windingtree/org.id-auth": "^1.2.2",
    "@windingtree/org.id-core": "^1.2.2",
    "@windingtree/org.id-utils": "^1.2.2",
    "@windingtree/org.json-schema": "1.0.2",
    "ethers": "^5.7.2",
    "luxon": "^3.0.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@nomiclabs/hardhat-ethers": "2.2.0",
    "@types/chai": "4.3.3",
    "@types/chai-as-promised": "7.1.5",
    "@types/luxon": "3.0.2",
    "@types/mocha": "10.0.0",
    "@windingtree/org.id-test-setup": "^1.2.2",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "8.25.0",
    "hardhat": "2.12.0",
    "nyc": "15.1.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}

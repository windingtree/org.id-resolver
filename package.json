{
  "name": "@windingtree/org.id-resolver",
  "version": "2.4.1",
  "description": "ORGiD DID resolver",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "orgid",
    "did",
    "resolver",
    "javascript"
  ],
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Winding Tree Developers <dev@windingtree.com>",
  "contributors": [
    "Kostiantyn Smyrnov <kostysh@gmail.com>"
  ],
  "homepage": "https://github.com/windingtree/org.id-resolver#README",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:windingtree/org.id-resolver.git"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "build": "rm -rf dist && npx tsc -p tsconfig-build.json",
    "build:docs": "rm -rf docs && npx typedoc --plugin typedoc-plugin-markdown --readme none --out docs src/index.ts",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage"
  },
  "dependencies": {
    "@windingtree/org.id-core": "0.3.8",
    "@windingtree/org.id-utils": "0.2.18",
    "@windingtree/org.id-auth": "0.4.2"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "eslint": "7.29.0",
    "jest": "27.0.6",
    "ts-jest": "27.0.3",
    "typedoc": "0.21.2",
    "typedoc-plugin-markdown": "3.10.2",
    "typescript": "4.3.4",
    "@windingtree/org.id-test-setup": "0.1.0"
  }
}
